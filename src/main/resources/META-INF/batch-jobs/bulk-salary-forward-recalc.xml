<?xml version="1.0" encoding="UTF-8"?>
<job id="bulk-salary-forward-recalc"
     xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
    <listeners>
        <listener ref="jobMonitoringListener"/>
    </listeners>
    <step id="recalc-day">
        <batchlet ref="userSalaryDayRecalcBatchletEnhanced">
            <!-- Inject the user UUID and date from partition -->
            <properties>
                <property name="userUuid" value="#{partitionPlan['userUuid']}"/>
                <property name="date" value="#{partitionPlan['date']}"/>
            </properties>
        </batchlet>

        <!-- Partition the step: one partition per user Ã— day -->
        <partition>
            <mapper ref="multiUserDatesPartitionMapper">
                <properties>
                    <!-- Comma-separated list of user UUIDs -->
                    <property name="userUuids" value="#{jobParameters['userUuids']}"/>
                    <!-- Date range [inclusive] -->
                    <property name="start" value="#{jobParameters['start']}"/>
                    <property name="end" value="#{jobParameters['end']}"/>
                    <!-- Optional thread count hint -->
                    <property name="requestedThreads" value="#{jobParameters['requestedThreads']}"/>
                </properties>
            </mapper>
            <analyzer ref="resultBasedPartitionAnalyzer"/>
            <collector ref="userSalaryDayRecalcBatchletEnhanced"/>
        </partition>
    </step>
</job>
