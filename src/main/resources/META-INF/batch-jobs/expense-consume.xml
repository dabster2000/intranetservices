<?xml version="1.0" encoding="UTF-8"?>
<job id="expense-consume" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
    <listeners>
        <listener ref="jobMonitoringListener"/>
    </listeners>

    <step id="expense-consume-step">
        <listeners>
            <listener ref="stepProgressListener"/>
        </listeners>

        <chunk item-count="5" checkpoint-policy="item">
            <reader ref="expenseItemReader"/>
            <writer ref="expenseItemWriter">
                <properties>
                    <!-- Throttle: 10000ms (10 seconds) between each expense upload -->
                    <property name="throttleMs" value="10000"/>
                </properties>
            </writer>
        </chunk>
    </step>
</job>
