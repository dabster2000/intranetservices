<?xml version="1.0" encoding="UTF-8"?>
<job id="user-salary-forward-recalc"
     xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
    <listeners>
        <listener ref="jobMonitoringListener"/>
    </listeners>
    <step id="recalc-day">
        <batchlet ref="userSalaryDayRecalcBatchlet">
            <!-- Inject the user and the partition's date into the batchlet -->
            <properties>
                <property name="userUuid" value="#{jobParameters['userUuid']}"/>
                <property name="date" value="#{partitionPlan['date']}"/>
            </properties>
        </batchlet>

        <!-- Partition the step: one partition per day in [start, end] -->
        <partition>
            <mapper ref="userForwardDatesPartitionMapper">
                <properties>
                    <!-- [inclusive] window provided when starting the job -->
                    <property name="start" value="#{jobParameters['start']}"/>
                    <property name="end" value="#{jobParameters['end']}"/>
                    <!-- optional, cap concurrency -->
                    <property name="requestedThreads" value="#{jobParameters['requestedThreads']}"/>
                </properties>
            </mapper>
        </partition>
    </step>
</job>
