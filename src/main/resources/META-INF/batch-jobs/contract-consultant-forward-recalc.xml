<?xml version="1.0" encoding="UTF-8"?>
<job id="contract-consultant-forward-recalc"
     xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
    <listeners>
        <listener ref="jobMonitoringListener"/>
    </listeners>
    <step id="recalc-day">
        <batchlet ref="contractConsultantDayRecalcBatchletEnhanced">
            <properties>
                <property name="userUuid" value="#{jobParameters['userUuid']}"/>
                <property name="date" value="#{partitionPlan['date']}"/>
            </properties>
        </batchlet>
        <partition>
            <mapper ref="userForwardDatesPartitionMapper">
                <properties>
                    <property name="start" value="#{jobParameters['start']}"/>
                    <property name="end" value="#{jobParameters['end']}"/>
                    <property name="requestedThreads" value="#{jobParameters['requestedThreads']}"/>
                </properties>
            </mapper>
            <analyzer ref="resultBasedPartitionAnalyzer"/>
            <collector ref="contractConsultantDayRecalcBatchletEnhanced"/>
        </partition>
    </step>
</job>
